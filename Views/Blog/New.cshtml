@model Lesson2_DailyBlogger.Models.BlogPost

@{
    ViewData["Title"] = "New Post";
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width-device-width" />
</head>
<body>

    <h2>New</h2>

    <h4>Create New BlogPost</h4>
    <hr>
    <div class="row">
        <div class="col-md-4">
            <form asp-action="Create">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <div class="form-group">
                    <label asp-for="blogTitle" class="control-label"></label>
                    <input asp-for="blogTitle" class="form-control" />
                    <span asp-validation-for="blogTitle" class="text-danger"></span>
                </div>

                <div class="form-group">
                    <label asp-for="content" class="control-label"></label>
                    <input asp-for="content" class="form-control" />
                    <span asp-validation-for="content" class="text-danger"></span>
                </div>

                <div class="form-group">
                    <label asp-for="blogDate" class="control-label"></label>
                    <input asp-for="blogDate" class="form-control" />
                    <span asp-validation-for="blogDate" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <input type="submit" value="Post Blog" class="btn btn-default" />
                </div>
            </form>
        </div>
    </div>

    <div>
        <a asp-action="List">Back to List</a>
    </div>

    @section Scripts {
        @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
    }

</body>
</html>