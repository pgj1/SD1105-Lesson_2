@model IEnumerable<Lesson2_DailyBlogger.Models.BlogPost>


@{
    ViewData["Title"] = "Blog List";
    Layout = "_Layout";
}

<!DOCTYPE html>

<html>
    <head>
        <meta name="viewport" content="width-device-width" />
    </head>
    <body>
        <p>
        </p>

        <h2>Blog Posts</h2>
        <!-- Blog entries -->
        @foreach (var item in Model)
        {
    <div class="w3-container w3-center w3-padding-0">
        <hr />
        Blog Post Title:
        <a asp-controller="Blog" asp-action="Details" asp-route-id=@item.id>
            @Html.DisplayFor(m => item.blogTitle)
        </a>
        <br />
        <!--
    <p>Blog Post Content: @Html.DisplayFor(m => item.content) </p> -->
        Blog Post Date: @Html.DisplayFor(m => item.blogDate) 

    </div>
        }

    </body>
</html>
